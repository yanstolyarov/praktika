import motor_driver_new as MD
import button_script as BS
pl90=
pr90=
pr = 90 
pl=70
p=90 #power for both engine
while 1:
    but_1 = BS.button1_status()
    but_1 = BS.button2_status()
    if but_1==0 and but_2==0
        while but_2 != 1
            MD.motor_pwm_forw_1(pl)
            MD.motor_pwm_forw_2(pr)
        MD.stop()
    if but_1==0 and but_2==1
        while but_1 != 1
            MD.motor_pwm_forw_1(p)
            MD.motor_pwm_forw_2(p)
        MD.stop()
    if but_1==1 and but_2=0
        MD.motor_pwm_forw_1(pl90)
        MD.motor_pwm_forw_2(pr90)
            while but_1 != 1
                MD.motor_pwm_forw_1(pl)
                MD.motor_pwm_forw_2(pr)
            MD.stop()
    if but_1==1 and but_2=1         
        MD.motor_pwm_forw_1(pr90)
        MD.motor_pwm_forw_2(pl90)
            while but_1 != 1
                MD.motor_pwm_forw_1(pl)
                MD.motor_pwm_forw_2(pr)
            MD.stop()
